{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "lib": ["es6"],
      "allowJs": true,
      "outDir": "build",
      "rootDir": ".",
      "strict": true,
      "esModuleInterop": true,
      "noUnusedLocals": true,
      "types": ["node", "jest"],
      "skipLibCheck": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
      },
    "include": ["src/**/*", "./tests/**/**/*.ts"],
    "exclude": ["src/**/*.spec.ts"]
  }