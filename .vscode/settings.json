{
  "eslint.options": { "overrideConfigFile": "config/linter/.eslintrc" },
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.formatOnSaveMode": "modifications",
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
